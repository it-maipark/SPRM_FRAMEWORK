@{
    ViewBag.Title = "Kanban";
}

<style>
    .avatar-stack {
        display: flex;
        margin-top: 12px;
    }

    .avatar-small {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #007bff;
        color: white;
        font-size: 10px;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: -8px;
        border: 1px solid white;
        position: relative;
        cursor: default;
    }

    .avatar-small:first-child {
        margin-left: 0;
    }

    .avatar-small:hover::after {
        content: attr(data-name);
        position: absolute;
        top: 110%;
        left: 50%;
        transform: translateX(-50%);
        background: #333;
        color: white;
        padding: 4px 6px;
        border-radius: 4px;
        font-size: 10px;
        white-space: nowrap;
        z-index: 999;
    }
</style>

